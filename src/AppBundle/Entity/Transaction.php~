<?php

namespace AppBundle\Entity;

/**
 * Transaction
 */
class Transaction
{
    /**
     * @var int
     */
    private $id;

    /**
     * @var float
     */
    private $amount;

    /**
     * @var string
     */
    private $comment;

    /**
     * @var \DateTime $createdAt
     */
    private $createdAt;


    public function __construct()
    {
        $this->createdAt = new \DateTime();
    }

}
