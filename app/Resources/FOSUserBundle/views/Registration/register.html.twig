{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class='col-md-3'></div>
        <div class="col-md-6">
            <div class="login-box well">
                <form action="/register/" method="post">
                    <legend>Sign Up</legend>
                    <div class="form-group">
                        <label for="fos_user_registration_form_email">E-mail</label>
                        <input value='' id="fos_user_registration_form_email" name="fos_user_registration_form[email]" placeholder="E-mail" type="text"
                               class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="fos_user_registration_form_username">Username</label>
                        <input value='' id="fos_user_registration_form_username" name="fos_user_registration_form[username]" placeholder="Username" type="text"
                               class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="fos_user_registration_form_plainPassword_first">Password</label>
                        <input id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" value='' placeholder="Password" type="password" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="fos_user_registration_form_plainPassword_second">Repeat password</label>
                        <input id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" value='' placeholder="Repeat password" type="password" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <select name="fos_user_registration_form[country]" id="fos_user_registration_form_country"  class="form-control">
                            {%  for country in form.children.country.vars.choices %}
                                <option value="{{ country.value }}">{{ country.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="fos_user_registration_form[currency]" id="fos_user_registration_form_currency"  class="form-control">
                            {%  for currency in form.children.currency.vars.choices %}
                                <option value="{{ currency.value }}">{{ currency.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-default btn-login-submit btn-block m-t-md"
                               value="Register"/>
                    </div>
                    {{ form_row(form._token) }}
                </form>
            </div>
        </div>
        <div class='col-md-3'></div>

    </div>
{% endblock %}