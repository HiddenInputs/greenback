{% extends 'main.html.twig' %}

{% block body %}

    <div class="col-md-12">
        <div class="panel panel-default main-content">
            <div class="panel-body">
                <h3>Create new category</h3>
                {{ include('partials/category_form.html.twig',{
                    'buttonText' : 'Save Category'
                }) }}
    <div class="ui segment">
        <h2 class="ui header">
            <div class="content">
                Categories
            </div>
        </h2>
        <div class="ui hidden divider"></div>
        <div class="ui hidden divider"></div>
        <table class="ui compact celled definition table" id="categories-table">
            <thead>
            <tr>
                <th></th>
                <th>Category name</th>
                <th>Total transactions</th>
                <th>Largest transaction</th>
            </tr>
            </thead>
            <tbody>
            {% for detail in transactionDetails %}
            <tr>
                <td class="collapsing">
                    <a href="{{ path('category_edit', {'id' : detail.id}) }}">
                    <button class="ui icon green button">
                        <i class="pencil icon"></i>
                    </button>
                    </a>
                    <a href="{{ path('category_delete', {'id' : detail.id}) }}">
                    <button class="ui icon red button">
                        <i class="trash icon"></i>
                    </button>
                    </a>
                </td>
                <td>{{ detail.name }}</td>
                <td>{{ detail.totalTransactions }}</td>
                <td>{{ detail.theLargestTransaction }}</td>
            </tr>
            {% endfor %}

            </tbody>
            <tfoot class="full-width">
            <tr>
                <th></th>
                <th colspan="3">
                    <form class="ui form" name="category" method="post">
                        {{ form_start(categoryForm) }}
                        <div class="fields">
                        <div class="field">
                            {{ form_widget(categoryForm.name,{'attr': {'class' :'form-control', 'placeholder': 'Category name'}}) }}
                        </div>
                        <div class="field">
                            <button type="submit" class="ui right floated primary labeled icon button">
                                <i class="plus icon"></i> Add new category
                            </button>
                        </div>
                    </div>
                        {{ form_end(categoryForm) }}
                    </form>
                </th>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}